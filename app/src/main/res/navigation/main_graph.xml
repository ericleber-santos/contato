<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/contatoListFragment">

    <fragment
        android:id="@+id/contatoListFragment"
        android:name="br.com.ericleber.contatos.ui.contatolist.ContatoListFragment"
        android:label="@string/contatoList_title"
        tools:layout="@layout/contato_list_fragment">

        <action
            android:id="@+id/action_contatoListFragment_to_contatoFragment"
            app:destination="@id/contatoFragment" />
    </fragment>

    <fragment
        android:id="@+id/contatoFragment"
        android:name="br.com.ericleber.contatos.ui.contato.ContatoFragment"
        android:label="@string/contato_titulo_hint"
        tools:layout="@layout/contato_fragment" >

        <argument
            android:name="contato"
            app:argType="br.com.ericleber.contatos.data.db.entity.ContatoEntity"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

</navigation>